<div class="jumbotron">
    <h1 class="display-4">Bem vindo ao Blog App</h1>
    <p class="lead">Lorem ipsum</p>
    <hr class="my-4">
    <p>Dolar sit amet</p>
    <p class="lead">
        <a class=" btn btn-primary" href="#" role="button">Crie uma conta</a>
    </p>
</div>

<hr>

<h2>Postagens recentes:</h2>
{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
        <hr>
        <small>Categoria: {{categoria.nome}}</small><br>
        <small>Data de publicação: {{data}}</small>
    </div>
</div>

{{else}}
    <h5>Nenhuma postagem encontrada!</h5>
{{/each}}